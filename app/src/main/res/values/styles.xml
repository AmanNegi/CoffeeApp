<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomNameTheme" parent="Theme.AppCompat"> </style>

    <style name="ConfirmationTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textTheme">
    <item name="android:padding">20dp</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">#000</item>
    <item name="android:fontFamily">@font/exo_2_light</item>
</style>
    <style name="anotherTextTheme">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/jim_nightshade</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:textColor">#fff</item>
    </style>
</resources>
